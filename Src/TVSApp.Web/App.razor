@using Microsoft.AspNetCore.Components.Authorization
@using TVSApp.Web.Components

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData">
                <Authorizing>
                    <div class="flex flex-col justify-center items-center h-screen bg-gray-50 text-gray-700 font-sans">
                        <div class="w-10 h-10 border-4 border-gray-300 border-t-blue-500 rounded-full animate-spin"></div>
                        <p class="mt-4 text-lg font-medium">Carregando...</p>
                    </div>
                </Authorizing>
                <NotAuthorized>
                    <RedirectToLogin/>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <div class="flex flex-col justify-center items-center h-screen bg-gray-100 text-gray-800">
                <PageTitle>Erro 404</PageTitle>
                <h1 class="text-4xl font-bold text-red-600 mb-2">Erro 404</h1>
                <p class="text-lg">A página que você está procurando não foi encontrada.</p>
            </div>
        </NotFound>
    </Router>
</CascadingAuthenticationState>